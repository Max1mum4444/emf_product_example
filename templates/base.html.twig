{% block body %}
<main role="main">
    {{ include('default/_flash_messages.html.twig') }}
    {% block main %}

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-3">Hello, world!</h1>
            <p>This is a presentation web created by Erik Fabry (EMF Solutions).</p>
        </div>
    </div>

    <div class="container">
        <!-- Example row of columns -->
